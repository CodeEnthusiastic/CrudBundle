{% use "bootstrap_5_layout.html.twig" %}

{%- block form_label -%}
    {% if form.vars.name in ['from', 'to'] %}
        {{ parent() }}
    {% endif %}
{%- endblock form_label %}

{%- block form_row -%}
    {% set compound = false %}
    {% set row_class = 'mb-1' %}
    {{ parent() }}
{%- endblock form_row %}

{% block form_label_content %}
    {% if form.vars.name in ['from', 'to'] %}
        {{ parent() }}
    {% endif %}
{% endblock form_label_content %}